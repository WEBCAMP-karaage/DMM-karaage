<div class="container">
  <div class="row col-10 mt-4 mb-4">
    <h2 class="page_title">ジャンル登録・一覧画面</h2>
  </div>
  <%= render 'layouts/errors', obj: @genre %>
  <div class="row col-10 mt-5 offset-md-1">
    <%= form_with model: Genre.new, url: admin_genres_path, class: "form-inline", local:true do |f| %>
    <%= f.label :name, "ジャンル名", style: "margin-right: 30px" %>
    <%= f.text_field :name, class: "form-control", style: "margin-right: 30px"%>
    <%= f.submit "新規登録", class: "btn btn-md btn-success" %>
    <% end %>
  </div>
  <div class="row col-4 mt-5 offset-md-1">
    <table class="table">
      <thead class="table-secondary">
        <th scope="col">ジャンル</th>
        <th></th>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-sm btn-success" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>

