<div class="container">
  <div class="row col-10 mt-4 mb-4">
    <h2 class="">ジャンル編集画面</h2>
  </div>
  <div class="row col-10 mt-5 offset-md-1">
    <%= form_with model: @genre, url: admin_genre_path, class: "form-inline", local:true do |f| %>
    <%= f.label :name, "ジャンル名", style: "margin-right: 30px" %>
    <%= f.text_field :name, style: "margin-right: 30px" %>
    <%= f.submit "変更を保存", class: "btn btn-md btn-success" %>
    <% end %>
  </div>
</div>