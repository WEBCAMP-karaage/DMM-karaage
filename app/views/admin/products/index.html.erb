<div class="container px-5 px-md-0 mt-5">
  <div class="row" style="margin-left: 0; margin-right: 0;">
    <h3 class="cart" style="margin-bottom: 0;">商品一覧</h3>
    <%= link_to "", new_admin_product_path, class: 'far fa-plus-square' %>
  </div>
    <div class="cart-product-index">
        <table class="mt-5 mb-5 table table-bordered">
          <thead>
            <tr class="table-active">
              <td class="border border-dark" style="width: 10%">商品ID</td>
              <td class="border border-dark" style="width: 15%">商品名</td>
              <td class="border border-dark" style="width: 15%">税抜価格</td>
              <td class="border border-dark" style="width: 15%">ジャンル</td>
              <td class="border border-dark" style="width: 15%">ステータス</td>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |product|%>
              <tr>
                <td>
                  <%= product.id %>
                </td>
                <td>
                  <%= link_to product.name, admin_product_path(product) %>
                </td>
                <td>
                  <%= product.non_taxed_price %>
                </td>
                <td>
                  <%= product.genre.name %>
                </td>
                <td>
                  <%= product.sales_status ? '販売中' : '販売停止中'%>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <div class="pagination">
        <ul class="pagination mx-auto">
          <%= paginate @products %>
        </ul>
      </div>
    </div>
  </div>