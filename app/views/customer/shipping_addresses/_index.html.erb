<% if shipping_addresses.present? %>
<table class= "table-bordered mt-4" >
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% shipping_addresses.each do |shipping_address| %>
      <tr>
        <td><%= shipping_address.postal_code %></td>
        <td><%= shipping_address.address %></td>
        <td><%= shipping_address.name %></td>
        <td><%= link_to '編集する', edit_shipping_address_path(shipping_address), class: "btn btn-sm btn-success edit_shipping_address#{shipping_address.id}" %></td>
        <td><%= link_to '削除する', shipping_address_path(shipping_address), method: :delete, data: { confirm: '本当に削除しますか？'}, class: "btn btn-sm btn-danger destroy_shipping_address_#{shipping_address.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <h5 class="mt-5">登録されている配送先はありません</h5>
<% end %>
