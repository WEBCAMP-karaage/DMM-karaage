<div class="container">
  <div class="row">
    <div class="col-10 mx-auto">
      <h2 class="page_title mt-4">配送先編集</h2>
      <%= render 'layouts/errors', obj: @shipping_address %>
      <table class="table  table-borderless table-sm">
        <thead>
          <tr>
            <th style="width: 20%"></th>
            <th style="width: 20%"></th>
            <th style="width: 20%"></th>
            <th style="width: 20%"></th>
          </tr>
        </thead>
        <tbody>
          <%= form_with model:@shipping_address, local:true do |f| %>
            <tr>
              <th><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></th>
              <td>
              <%= f.text_field :postal_code, class: 'form-control' %>
              </td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <th><%= f.label :address, "住所" %></th>
              <td colspan="2">
              <%= f.text_field :address, class: 'form-control' %>
              </td>
              <td></td>
            </tr>
            <tr>
              <th><%= f.label :name, "宛名" %></th>
              <td>
              <%= f.text_field :name, class: 'form-control' %>
              <td></td>
              </td>
            <td><%= f.submit "変更内容を保存", class: "btn btn-md btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>