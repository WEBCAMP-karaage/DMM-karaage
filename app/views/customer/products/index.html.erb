<div class="row" , style="margin-top: 50px;">
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-2 jenre_reserch">
    <ul class="list-group">
        <li class="list-group-item "><strong>ジャンル検索</strong></li>
        <% @genres.each do |genre| %>
    	    <li class="list-group-item"><%= genre.name %></li>
        <% end %>
    </ul>
    </div>

    <div class="col-lg-10 jenre_reserch">
    <h2 class="product-headline">商品一覧<small>(全<%= @products.count %>件)</h2>
      <div class="product-box  d-flex flex-wrap">
      <% @products.each do |product|%>
        <div class="flex_container">
          <table>
            <tr>
              <td>
                <%= link_to product_path(product) do %>
                <%= attachment_image_tag(product, :image, :fill,200,200, size: '200x200') %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td><%= link_to product.name, product_path(product) %></td>
            </tr>
            <tr>
              <td>¥<%= product.add_tax_price %>(税込)</td>
            </tr>
          </table>
        </div>
      <% end %>
      </div>
      <div class="pagination">
        <ul class="pagination mx-auto">
          <%= paginate @products %>
        </ul>
      </div>
    </div>
</div>
