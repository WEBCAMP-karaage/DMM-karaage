<div class="container px-7 px-md-5 mt-5">
<h2 class="head-line orders">注文履歴一覧</h2>
  <table class="table">
    <thead>
        <td class="border border-dark table-active" style="width: 15%">注文日</td>
        <td class="border border-dark table-active" style="width: 30%">配送先</td>
        <td class="border border-dark table-active" style="width: 15%">注文商品</td>
        <td class="border border-dark table-active" style="width: 10%">支払金額</td>
        <td class="border border-dark table-active" style="width: 15%">ステータス</td>
        <td class="border border-dark table-active" style="width: 15%">注文詳細</td>
    </thead>
    <tbody class="border border-dark">
      <% @orders.each do |order|%>
        <tr>
          <td class="border border-dark"><%= order.created_at.strftime('%Y/%m/%d')%></td>
          <td class="border border-dark"><%= order.postal_code %><br><%= order.address %><br><%= order.name %></td>
          <td class="border border-dark"><% order.order_products.each do |order_product| %>
                <%= order_product.product.name %>
              <% end %>
          </td>
          <td class="border border-dark"><%= order.total_price %></td>
          <td class="border border-dark"><%= order.order_status %></td>
          <td class="border border-dark"><%= link_to "表示する", order_path(order), class: "btn btn-primary"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="pagination">
    <ul class="pagination mx-auto">
      <%= paginate @orders %>
    </ul>
  </div>
</div>
