<div class="container">
  <div class="col-md-offset-1">
    <h2 class="mt-4 page_title">管理者ログイン</h2>
  </div>
</div>

<div class="container">
  <div class="row mx-auto">

      <table class="table mx-auto table-borderless" style="width: 75%">
        <thead>
            <tr>
              <th style="width: 30%" scope="col"></th>
              <th style="width: 70%" scope="col"></th>
            </tr>
        </thead>
        <tbody>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <tr scope="row">
              <th><%= f.label :email, "メールアドレス" %></th>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'sample@example.com', class: "form-control" %></td>
            </tr>

            <tr scope="row">
              <th><%= f.label :password, "パスワード"%></th>
              <td><%= f.password_field :password, autocomplete: "current-password",class: "form-control" %></td>
            </tr>
          </tbody>
        </table>
        <div class="container">
          <div class="row">
            <div class="actions mx-auto">
              <div class="actions">
                <%= f.submit "ログイン",class: "btn btn-md btn-primary" %>
                </div>
              </div>
            </div>
          </div>

    <% end %>
  </div>
</div>





